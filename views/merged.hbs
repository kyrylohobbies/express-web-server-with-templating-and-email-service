<div class="container">
    <div class="page pt-5">
        <div class="row">
            <div class="col">
                <h1 class="d-flex justify-content-center ease-in pb-5" style="display:none;">Reading Merged JSON</h1>
            </div>
        </div>
        {{#each data}}
        <div class="row">
            <div class="col"></div>
            <div class="col d-flex justify-content-center">
                <div class="test-border">
                    <h4>{{this.title}}</h4>

                    <p><b>ID: </b>{{this.id}}</p>

                    <p><b>DESC: </b>{{this.description}}</p>

                    <p><b>SRC: </b>{{this.img}}</p>
                    <br/>
                    <p><big><b>STOCK: </b><u>{{this.stock}}</u></big></p>
                </div>
                

            </div>
            <div class="col"></div>
        </div>
        {{/each}}
    </div>
</div>